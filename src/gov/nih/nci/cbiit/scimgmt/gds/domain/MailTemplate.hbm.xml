<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gov.nih.nci.cbiit.scimgmt.gds.domain.MailTemplate" table="MAIL_TEMPLATE_T" mutable="false">
    	<cache usage="read-only" />
        <id name="id" type="integer">
            <column name="ID" precision="10" scale="0" />
            <generator class="assigned" />
        </id>
        <property name="shortIdentifier" type="string">
            <column name="SHORT_IDENTIFIER" length="20" />
        </property>
        <property name="description" type="string">
            <column name="DESCRIPTION" length="200" />
        </property>
        <property name="subject" type="string">
            <column name="SUBJECT" length="100" not-null="true" />
        </property>
        <property name="body" type="string">
            <column name="BODY" length="4000" />
        </property>
        <property name="createdDate" type="timestamp" insert="false" update="false">
            <column name="CREATED_DATE" length="7" not-null="true" />
        </property>
        <property name="createdBy" type="string" insert="false" update="false">
            <column name="CREATED_BY" length="50" not-null="true" />
        </property>
        <property name="lastChangedDate" type="timestamp">
            <column name="LAST_CHANGED_DATE" length="7" />
        </property>
        <property name="lastChangedBy" type="string">
            <column name="LAST_CHANGED_BY" length="50" />
        </property>
        <property name="active" type="yes_no" generated="never" lazy="false">
            <column name="ACTIVE" length="1" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
